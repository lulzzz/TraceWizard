<UserControl x:Class="TraceWizard.TwApp.ClassificationTick"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:properties="clr-namespace:TraceWizard.TwApp.Properties"
>
    <StackPanel>
        <Ellipse Name="TickManuallyClassified" Height="6" Width="6" Margin="0,1" Stretch="Fill" StrokeThickness="1"
            Fill="{Binding Source={StaticResource Settings}, Path=Default.SelectionTickColor, Mode=OneWay}"                 
            Stroke="{Binding Source={StaticResource Settings}, Path=Default.SelectionTickColor, Mode=OneWay}" />
        <Path Name="TickClassifiedUsingFixtureList" Data="M0,0 L0,1 L6,1 L6,0z M0,5 L0,6 L6,6 L6,5z" Height="6" Width="6" Margin="0,1" StrokeThickness="1"
            Fill="{Binding Source={StaticResource Settings}, Path=Default.SelectionTickColor, Mode=OneWay}"                 
            Stroke="{Binding Source={StaticResource Settings}, Path=Default.SelectionTickColor, Mode=OneWay}" />
        <Polygon Name="TickClassifiedUsingMachineLearning" Points="-1,0,1,0,1,2,-1,2,-1,0" Height="6" Width="6" Margin="0,1" Stretch="Fill" StrokeThickness="1"
            Fill="{Binding Source={StaticResource Settings}, Path=Default.SelectionTickColor, Mode=OneWay}"                 
            Stroke="{Binding Source={StaticResource Settings}, Path=Default.SelectionTickColor, Mode=OneWay}" />
    </StackPanel>
</UserControl>
