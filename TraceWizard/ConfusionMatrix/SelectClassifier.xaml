<Window x:Class="TraceWizard.TwApp.ClassifierSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select Classifiers" 
    WindowStyle="ToolWindow"
    SizeToContent="WidthAndHeight"
    ShowInTaskbar="false"
    WindowStartupLocation="CenterScreen"
        >
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <Button DockPanel.Dock="Right"  x:Name="CancelButton" HorizontalAlignment="Right" Margin="0,6,6,6" Padding="3" Height="24" Width="72" IsCancel="true">Cancel</Button>
            <Button DockPanel.Dock="Right" x:Name="OkButton" HorizontalAlignment="Right" Margin="3,6,6,6" Padding="3" Height="24"  Width="72" IsDefault="true">OK</Button>
        </DockPanel>
        <GroupBox Header="Classifiers" DockPanel.Dock="Left" Margin="6" Padding="4">
            <Grid Name="grid" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
            </Grid>
        </GroupBox>
    </DockPanel>
</Window>
