<UserControl x:Class="TraceWizard.TwApp.HourlyReportPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TraceWizard.TwApp"            
             Background="White"
    Padding="20"
>
    <ScrollViewer>
        <DockPanel>
            <local:ReportGeneralProperties DockPanel.Dock="Top" x:Name="GeneralProperties"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" >
                <local:HourlyTotalsDetail Margin="0,20,20,0" x:Name="HourlyTotalsDetail"/>
                <local:LogPropertiesDetail Margin="0,20" x:Name="LogPropertiesDetail"/>
            </StackPanel>
            <local:DailyTotalsDetail Margin="0,20,20,0" DockPanel.Dock="Bottom" x:Name="DailyTotalsDetail"/>
        </DockPanel>
    </ScrollViewer>
</UserControl>
