<UserControl x:Class="TraceWizard.TwApp.FixtureSummaryReportRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="LabelFixture" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <TextBlock x:Name="LabelCount" Grid.Column="1"  HorizontalAlignment="Right" Margin="24,2,0,0"/>
        <TextBlock x:Name="LabelPercent" Grid.Column="2" HorizontalAlignment="Right" Margin="24,2,0,0"/>
    </Grid>
</UserControl>
